<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <androidx.gridlayout.widget.GridLayout
        android:layout_width="360dp"
        android:layout_height="390dp"
        android:paddingLeft="5dp"
        android:paddingTop="5dp"
        android:paddingRight="5dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.49"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.601">

        <Button
            android:id="@+id/btnLugar1"
            android:layout_width="171dp"
            android:layout_height="137dp"
            android:background="@drawable/palaciobellasartes"
            android:onClick="CambiarUbicacion1"
            android:paddingRight="10dp"
            app:layout_column="0"
            app:layout_row="0" />

        <Button
            android:id="@+id/btnLugar2"
            android:layout_width="281dp"
            android:layout_height="136dp"
            android:background="@drawable/zocalo"
            android:onClick="CambiarUbicacion2"
            app:layout_column="1"
            app:layout_row="0" />

        <Button
            android:id="@+id/btnLugar3"
            android:layout_width="170dp"
            android:layout_height="132dp"
            android:background="@drawable/castilodechapultepec"
            android:onClick="CambiarUbicacion3"
            app:layout_column="0"
            app:layout_row="2" />

        <Button
            android:id="@+id/btnLugar4"
            android:layout_width="174dp"
            android:layout_height="134dp"
            android:background="@drawable/xochimilco"
            android:onClick="CambiarUbicacion4"
            app:layout_column="1"
            app:layout_row="2" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Castillo de  Chapultepec"
            app:layout_column="0"
            app:layout_row="3" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Xochimilco"
            app:layout_column="1"
            app:layout_row="3" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ZÃ³calo de la CDMX"
            app:layout_column="1"
            app:layout_row="1" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Palacio de Bellas Artes"
            app:layout_column="0"
            app:layout_row="1" />
    </androidx.gridlayout.widget.GridLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cvMascota"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="50dp"
    android:background="@color/colorPrimary"
    android:padding="0dip"
    card_view:cardCornerRadius="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="0dip">

        <ImageView
            android:id="@+id/imgPet"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:scaleType="centerCrop"
            android:src="@drawable/pet10" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">


            <Button
                android:id="@+id/imgGLike"
                android:layout_width="@dimen/like_medida"
                android:layout_height="@dimen/like_medida"
                android:background="@drawable/icons8_dog_bone_100" />

            <TextView
                android:id="@+id/tvNombre"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/like_medida"
                android:layout_weight="1"
                android:text="Nombre"
                android:textSize="30sp"
                card_view:fontFamily="sans-serif-black" />

            <TextView
                android:id="@+id/tvLike"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/like_medida"
                android:layout_weight="1"
                android:gravity="right"
                android:text="0"
                android:textSize="30sp" />

            <ImageView
                android:id="@+id/imgLikes"
                android:layout_width="@dimen/like_medida"
                android:layout_height="@dimen/like_medida"
                android:src="@drawable/icons8_dog_bone_48" />

        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>
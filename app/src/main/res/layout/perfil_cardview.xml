<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cvMascotaPerfil"
    android:layout_width="@dimen/card_perfil"
    android:layout_height="@dimen/card_perfil"
    android:layout_marginBottom="50dp"
    android:paddingLeft="5dp"
    android:paddingRight="5dp"
    android:background="@color/colorPrimary"
    android:padding="0dip"
    card_view:cardCornerRadius="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="0dip">

        <ImageView
            android:id="@+id/imgPetPerfil"
            android:layout_width="@dimen/fotos_perfil"
            android:layout_height="@dimen/fotos_perfil"
            android:scaleType="centerCrop"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/pet10" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:orientation="horizontal"
            android:layout_gravity="center_horizontal">

            <TextView
                android:id="@+id/tvLikePerfil"
                android:layout_width="@dimen/componentes_perfil"
                android:layout_height="@dimen/componentes_perfil"
                android:gravity="center_horizontal"
                android:text="0"
                android:textSize="12sp" />

            <ImageView
                android:id="@+id/imgLikesPerfil"
                android:layout_width="@dimen/componentes_perfil"
                android:layout_height="@dimen/componentes_perfil"
                android:gravity="center_horizontal"
                android:src="@drawable/icons8_dog_bone_48" />

        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>